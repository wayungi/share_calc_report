<!DOCTYPE html> 
<html> 
<head> 
	<title>Home Page</title> 
    <link rel="stylesheet" href="css/style.css" />
</head> 

<body> 
	<main> 
        <% if(!data) { %>
            <p class="no-files">Nothing to process</p>
        <% } %>
        <% if(data) {
            data.forEach((file) => { %>
                    <% file.fileData.forEach((page) => { %>
                        <table>
                        <tr>
                            <td>Product Name: </td>
                            <td><%= file.fileType %> <%= page.productType %></td>
                            <td>&nbsp;</td>
                            <td>Draw Number</td>
                            <td><%= page.drawNumber %></td>
                        </tr>
                        <tr>
                            <td>Next Draw Rollover:</td>
                            <td><%= page.nextDrawRollover %></td>
                            <td>&nbsp;</td>
                            <td>Rollover Number:</td>
                            <td><%= page.rollOverNumber %></td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td>Div</td>
                            <td>Share value</td>
                            <td>Nbr of shares</td>
                            <td>Payout Amount</td>
                            <td>&nbsp;</td>
                        </tr>
                        <% page.gameRecords.forEach((record) => {%> 
                            <tr class="record">
                                <td><%= record[0] %></td>
                                <td>UGX <%= record[1] %></td>
                                <td>&#215</td>
                                <td>UGX <%= record[3] %></td>
                                <td>&nbsp;</td>
                            </tr>
                        <%})%>
                    </table>
                    <%})%>
                
            <% })
         } %>
	</main> 
</body> 
</html>
